<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full h-full bg-zinc-800 p-10 text-white">
        <a class="text-blue-500"  href="/">Back to home</a>
        <h1 class="tex-3xl tracking-tighter mb-3 mt-10">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
                <% users.forEach(function(user){ %>
                    <div class="user w-72 p-4 bg-zinc-700 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%= user.Imageurl %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.Name %></h3>
                        <h5 class="text-zinc-500"><%= user.Email %></h5>
                        <div class="flex-gap-3 mt-10">
                            <a href="/edit/<%= user._id %>" class="text-zinc-200">Edit User</a>
                            <a class="text-red-500"href="/delete/<%= user._id %>">Delete user</a>
                        </div>
                    </div>
                <% }) %>
           <% } else{ %>
                <h3 class="text-zinc-500">no users yet</h3>
           <% } %>

        </div>
    </div>
</body>
</html>